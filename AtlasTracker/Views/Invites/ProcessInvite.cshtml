@model AtlasTracker.Models.Invite



<header class="page-header">
    <p style="font-size:x-large;color:deepskyblue" class="px-2 pt-3">Welcome @Model.InviteeFirstName @Model.InviteeLastName! | Company Name: @Model.Company!.Name!</p>

    <div class="right-wrapper text-end">
        <ol class="breadcrumbs">
            <li>
                <a asp-action="Dashboard" asp-controller="Home">
                    <i class="bx bx-home-alt"></i>
                </a>
            </li>

            <li><span>Your Invitation</span></li>

        </ol>

        <a class="sidebar-right-toggle" data-open="sidebar-right"></a>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card card-featured card-featured-info">
                <div class="card-header">
                    <h2>Invite</h2>
                </div>
            </div>
            <div class="card-body">
                <p style="font-size:large">
                    @Model.Invitor!.FullName has invited you to collaborate on the @Model.Project!.Name project.
                    <br /><br /> Click the "JOIN" button below to register with the company and begin entering tickets.
                </p>
                <a class="btn btn-primary btn-lg btn-block" asp-area="Identity" asp-page="/Account/RegisterByInvite" asp-route-id="@Model.Id" asp-route-companyId="@Model.CompanyId"><i class="bi bi-box-arrow-in-right"></i> <span>JOIN</span></a>
            </div>
        </div>
    </div>
</div>





