@model AtlasTracker.Models.ViewModels.ProjectMembersViewModel

<header class="page-header">
    <h2>Assign Team Members</h2>

    <div class="right-wrapper text-end">
        <ol class="breadcrumbs">
            <li>
                <a asp-action="Dashboard" asp-controller="Home">
                    <i class="bx bx-home-alt"></i>
                </a>
            </li>

            <li><span>Assign Team Members</span></li>

        </ol>

        <a class="sidebar-right-toggle" data-open="sidebar-right"></a>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3> </h3>
            <div class="card card-featured card-featured-info">
                <div class="card-header">
                    <h2 class="w-50 fw-bold">Project Name:</h2>
                    <h3 class="fw-semibold">@Model.Project!.Name</h3>
                </div>
                <div class="card-body">
                    <div>
                        <h3 style="color:deepskyblue" asp-for="@Model.UsersList" class="fw-semibold control-label">Assign team members for Project:</h3>
                    </div>
                    <form method="post" asp-action="AssignMembers" asp-controller="Projects">
                        <input hidden asp-for="Project!.Id" />
                        <div class="col-12 mb-3">
                            <div class="form-group">
                                <select style="height:150px; font-size:large" required asp-for="@Model.SelectedUsers" class="form-control" asp-items="@Model!.UsersList" multiple="multiple"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <input type="submit" class="btn alert-primary" value="Assign Users" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

